<%= form_for(@micropost) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="field">
		<%= f.text_area :content, placeholder: "Compose new micropost...", onkeyup: "countChars('micropost_content','charcount')", onkeydown: "countChars('micropost_content','charcount');", onmouseout: "countChars('micropost_content','charcount');" %>
		<span id="charcount">0</span> characters entered.
	</div>
	<%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>